<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/donorName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toEndOf="@+id/donorName"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/donor_list_name"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_below="@+id/donorName"
            android:id="@+id/donorContact"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donor_list_contact"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_below="@+id/donorName"
            android:layout_toEndOf="@+id/donorContact"
            android:textColor="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/call"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/donor_list_contact"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/sms"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/sms"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/call"
            android:layout_marginEnd="15dp"
            android:src="@drawable/sms" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group:"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_below="@+id/donorContact"
            android:id="@+id/donorGroup"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/donor_list_blood"
            android:layout_below="@+id/donorContact"
            android:layout_toEndOf="@+id/donorGroup"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_below="@+id/donorGroup"
            android:id="@+id/donorAddress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/donor_list_address"
            android:layout_below="@+id/donorGroup"
            android:layout_toEndOf="@+id/donorAddress"
            android:textColor="@color/colorPrimaryDark"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>