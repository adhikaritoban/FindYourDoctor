<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lekhn.findyourdoctor.BloodManagement.BloodDonateFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/donateLayout">

        <ImageView
            android:id="@+id/blooddonateimage"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:baseline="@dimen/cardview_default_radius"
            android:src="@drawable/blooddonate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blooddonateimage"
            android:id="@+id/donordetails"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Donor Details"
            android:textColor="#101470"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:id="@+id/line1"
            android:layout_below="@+id/donordetails"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:padding="4dp"
            android:id="@+id/name"
            android:layout_below="@+id/line1"
            android:layout_marginTop="6dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:maxLines="1"
            android:id="@+id/namefield"
            android:inputType="text"
            android:layout_below="@+id/line1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Phone Number:"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:id="@+id/number"
            android:layout_below="@+id/namefield"/>

        <EditText
            android:id="@+id/numberfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:maxLines="1"
            android:inputType="number"
            android:layout_below="@+id/namefield" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Last Donate Date:"
            android:textSize="18sp"
            android:hint="date"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:id="@+id/donatedate"
            android:layout_below="@+id/numberfield"/>

        <EditText
            android:id="@+id/donatedatefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:maxLines="1"
            android:textColor="#040404"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/donatedate"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Blood Group:"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/bloodgroup_name"
            android:layout_below="@+id/donatedatefield"/>

        <Spinner
            android:id="@+id/spinner_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/donordetails"
            android:layout_alignTop="@+id/bloodgroup_name"
            android:padding="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Select Zone:"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/donor_zone"
            android:layout_below="@+id/bloodgroup_name"/>

        <Spinner
            android:id="@+id/spinner_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner_blood"
            android:layout_alignTop="@+id/donor_zone"
            android:padding="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Address:"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/donor_address"
            android:layout_below="@+id/donor_zone"/>

        <EditText
            android:id="@+id/donor_addressfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:maxLines="1"
            android:layout_below="@+id/donor_zone" />

        <Button
            android:id="@+id/registerDonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donor_addressfield"
            android:paddingRight="45dp"
            android:paddingLeft="45dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:text="Register As Donor"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>
</FrameLayout>
