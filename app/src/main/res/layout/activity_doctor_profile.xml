<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/doctor_profile_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lekhn.findyourdoctor.Doctor.Doctor_Profile_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/option_menu_toolbar" />
        <LinearLayout
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/doctor_image_profile"
                android:src="@drawable/doctor"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctor_name_profile"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctor_specialist_profile"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctor_hospital_profile"
                android:layout_gravity="center_horizontal"
                android:text="Islington Hospital"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:id="@+id/location"
                android:layout_gravity="end"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_width="wrap_content"
                android:id="@+id/doctor_gmail_layout_profile"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/doctor_gmail"
                    android:src="@drawable/gmail"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/doctor_gmail_profile"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/doctor_phone_layout_profile"
                android:layout_marginStart="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/doctor_phone"
                    android:src="@drawable/phone"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/doctor_phone_profile"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:id="@+id/doctor_sms_layout_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36dp"
                    android:id="@+id/doctor_sms"
                    android:layout_height="36dp"
                    android:src="@drawable/sms"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/doctor_sms_profile"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:id="@+id/doctor_available_layout_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="30dp"
                    android:orientation="vertical"
                    android:id="@+id/available_color"
                    android:layout_height="30dp"
                    android:background="#e10909"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Doctor Available"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doctor Notice:"
                    android:paddingStart="10dp"
                    android:textColor="#ffff"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:background="#ffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:id="@+id/doctor_comment_profile"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor Schedule:"
                        android:paddingStart="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunday: "
                            android:id="@+id/sunday"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sundayText"
                            android:layout_marginStart="25dp"
                            android:layout_toRightOf="@+id/sunday"
                            android:text="10am - 5pm"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monday: "
                            android:layout_below="@id/sunday"
                            android:id="@+id/monday"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mondayText"
                            android:layout_below="@id/sundayText"
                            android:layout_marginStart="25dp"
                            android:layout_toRightOf="@+id/monday"
                            android:text="10am - 5pm"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tuesday: "
                            android:layout_below="@id/monday"
                            android:id="@+id/tuesday"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tuesdayText"
                            android:layout_below="@id/mondayText"
                            android:layout_marginStart="25dp"
                            android:layout_toRightOf="@+id/monday"
                            android:text="10am - 5pm"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wednesday: "
                            android:layout_below="@id/tuesday"
                            android:id="@+id/wednesday"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/wednesdayText"
                            android:layout_below="@id/tuesdayText"
                            android:layout_marginStart="25dp"
                            android:layout_toRightOf="@+id/monday"
                            android:text="10am - 5pm"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thursday: "
                            android:layout_below="@id/wednesday"
                            android:id="@+id/thursday"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/thursdayText"
                            android:layout_below="@id/wednesdayText"
                            android:layout_marginStart="25dp"
                            android:layout_toRightOf="@+id/monday"
                            android:text="10am - 5pm"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Friday: "
                            android:layout_below="@id/thursday"
                            android:id="@+id/friday"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fridayText"
                            android:layout_below="@id/thursdayText"
                            android:layout_marginStart="25dp"
                            android:layout_toRightOf="@+id/monday"
                            android:text="10am - 5pm"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saturday: "
                            android:layout_below="@id/friday"
                            android:id="@+id/saturday"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/saturdayText"
                            android:layout_below="@id/fridayText"
                            android:layout_marginStart="25dp"
                            android:layout_toRightOf="@+id/monday"
                            android:text="10am - 5pm"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>