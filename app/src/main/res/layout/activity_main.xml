<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout_home_logout">
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        tools:context="com.example.lekhn.findyourdoctor.MainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/toolbar_layout" />

            <android.support.v7.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:id="@+id/card_view"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                android:layout_marginTop="53dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/relativeLayout_home"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:orientation="vertical"
                        android:id="@+id/doctor_card"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        android:background="#065607"
                        android:elevation="5dp">

                        <ImageView
                            android:id="@+id/doctor_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/doctor_card" />

                        <TextView
                            android:id="@+id/doctor_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="DOCTOR"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="170dp"
                        android:orientation="vertical"
                        android:id="@+id/hospital_card"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="3dp"
                        android:background="#06044e"
                        android:elevation="5dp"
                        android:layout_toEndOf="@+id/doctor_card">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/hospital_card"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HOSPITAL"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:orientation="vertical"
                        android:id="@+id/blood_card"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_below="@+id/doctor_card"
                        android:background="#068276"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/blood_card"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLOOD MANAGEMENT"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="170dp"
                        android:orientation="vertical"
                        android:id="@+id/bmi_card"
                        android:layout_below="@+id/blood_card"
                        android:layout_marginRight="10dp"
                        android:background="#7d0517"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/bmi_card"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BMI CALCULATOR"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:orientation="vertical"
                        android:id="@+id/calendar_card"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/hospital_card"
                        android:layout_toRightOf="@+id/blood_card"
                        android:background="#51056b"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/calender_card"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HEALTH CALENDAR"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="170dp"
                        android:orientation="vertical"
                        android:id="@+id/pill_card"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/calendar_card"
                        android:layout_toRightOf="@+id/bmi_card"
                        android:background="#5b0212">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/pill_card"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MEDICINE REMAINDER"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                </RelativeLayout>
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/cardview_default_elevation"
                    app:backgroundTint="#088208"
                    app:fabSize="auto"
                    android:src="@drawable/button"
                    android:id="@+id/fab"/>
            </android.support.v7.widget.CardView>
        </FrameLayout>
        <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navigation_view"
            android:layout_gravity="start"
            app:menu="@menu/drawer_menu"
            app:headerLayout="@layout/navigation_drawer_header">
        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>